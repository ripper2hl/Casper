{{!< default}}
{{#post}}

{{{navigation}}}

<header class="main-header post-head {{#if image}}" style="background-image:  linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5)), url({{image}}){{else}}no-cover{{/if}}">
    <div class="container">
      <div class="main-header-text text-center">
        <h1 class="post-title">{{title}}</h1>

        <section class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
              {{date format="DD MMMM YYYY"}}
            </time>
            {{tags prefix=" on "}}
        </section>
      </div>
    </div>
</header>

<main class="container" role="main">
    <article >
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

        {{! Everything inside the #author tags pulls data from the author }}
        {{#author}}
            <section class="author text-center row">
              <div class="col-xs-12 col-md-6 col-md-offset-3">
                {{#if image}}
                <figure class="author-image center-block">
                  <img src="{{image}}" alt="{{image}}" class="img-responsive img-circle"  />
                </figure>
                {{/if}}

                <h4><a href="{{url}}">{{name}}</a></h4>

                {{#if bio}}
                    <p>{{bio}}</p>
                {{else}}
                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                {{/if}}
                <div class="author-meta">
                    {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                    {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                </div>
              </div>
            </section>

        {{/author}}

            <section class="share">
            </section>

        </footer>

    </article>
</main>
{{/post}}
